{
  "name": "@hr/bootstrap",
  "version": "1.0.1",
  "description": "Hannover Re",
  "devDependencies": {
    "@fontsource/archivo": "^5.0.17",
    "@fortawesome/fontawesome-pro": "^6.4.2",
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.14",
    "bootstrap": "^5.3.2",
    "clean-css-cli": "^5.6.1",
    "cpy-cli": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.0.0",
    "sass": "^1.63.4"
  },
  "scripts": {
    "copy:fontawesomefont": "cpy node_modules/@fortawesome/fontawesome-pro/webfonts/* dist/fonts/fontawesome/",
    "copy:webfont": "cpy node_modules/@fontsource/archivo/files/*latin*.woff2 dist/fonts/archivo/",
    "copy:fonts": "npm-run-all copy:fontawesomefont copy:webfont",
    "copy:js": "cpy node_modules/bootstrap/dist/js/bootstrap.bundle.min.js dist/js --flat",
    "copy:all": "npm-run-all copy:fonts copy:js",
    "transpile": "sass src/scss/bootstrap:dist/css -I node_modules",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/hr-bootstrap-theme.css",
    "minify": "cleancss dist/css/hr-bootstrap-theme.css -o dist/css/hr-bootstrap-theme.min.css",
    "build": "npm-run-all copy:all transpile autoprefixer minify"
  },
  "repository": {
    "type": "git",
    "url": "https://dev.azure.com/hannover-re/XEM/_git/HR-Bootstrap-Theme"
  },
  "author": "",
  "license": "ISC"
}
